<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"

    tools:context=".UserAccount.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/LogEmail"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputid"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColorHint="#D7467D" />

        <EditText
            android:id="@+id/LogPass"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputid"
            android:drawableLeft="@drawable/ic_locked_padlock"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColorHint="#D7467D" />

        <Button
            android:id="@+id/Logbtn"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_above="@+id/Signup"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/registerbutton"
            android:text="Login"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/LoginWith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Or Login With"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/Signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Dont't Have An Account? Sign Up"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/loggmail"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/gmail" />

    </LinearLayout>

</RelativeLayout>