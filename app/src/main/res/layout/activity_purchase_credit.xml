<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Purchase_in_app_credit.PurchaseCredit">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/CreateEventTitle"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="My Coin" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/BackToMenu"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back1" />


        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/coinimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="79dp"
        android:background="@drawable/mcoin" />

    <TextView
        android:id="@+id/MyCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/coinimg"
        android:layout_toEndOf="@+id/coinimg"
        android:layout_marginLeft="5dp"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/coinimg"

        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LY1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layer6">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mcoin"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4800"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/RM4.90"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/layer5"
                android:layout_marginLeft="160dp"
                android:text="RM 4.90"
                android:textColor="#FF0000"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/LY2"
            android:layout_width="match_parent"
            android:layout_below="@+id/LY1"
            android:layout_height="50dp"
            android:background="@drawable/layer6">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mcoin"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20000"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/RM19.90"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/layer5"
                android:layout_marginLeft="150dp"
                android:text="RM 19.90"
                android:textColor="#FF0000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LY3"
            android:layout_width="match_parent"
            android:layout_below="@+id/LY2"
            android:layout_height="50dp"
            android:background="@drawable/layer6">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mcoin"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="42000"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/RM39.90"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/layer5"
                android:layout_marginLeft="150dp"
                android:text="RM 39.90"
                android:textColor="#FF0000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LY4"
            android:layout_width="match_parent"
            android:layout_below="@+id/LY3"
            android:layout_height="50dp"
            android:background="@drawable/layer6">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mcoin"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85000"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/RM79.90"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/layer5"
                android:layout_marginLeft="150dp"
                android:text="RM 79.90"
                android:textColor="#FF0000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LY5"
            android:layout_width="match_parent"
            android:layout_below="@+id/LY4"
            android:layout_height="50dp"
            android:background="@drawable/layer6">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mcoin"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="110000"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/RM99.90"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/layer5"
                android:layout_marginLeft="140dp"
                android:text="RM 99.90"
                android:textColor="#FF0000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LY6"
            android:layout_width="match_parent"
            android:layout_below="@+id/LY5"
            android:layout_height="50dp"
            android:background="@drawable/layer6">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mcoin"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="230000"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/RM199.90"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/layer5"
                android:layout_marginLeft="140dp"
                android:text="RM 199.90"
                android:textColor="#FF0000"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#808080"
            android:textStyle="italic"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/paypal"/>


    </LinearLayout>

</RelativeLayout>