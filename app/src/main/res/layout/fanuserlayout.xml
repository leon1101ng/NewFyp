<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/FCUser_Image"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/FCUser_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="10dp"
            android:text="UserName"
            android:textSize="16sp"
            android:textStyle="bold" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/FanVip"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/vipgif" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/FanClubHost"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/hostgif" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/removeFanClubUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="70dp"
            android:padding="10dp"
            android:src="@drawable/kickuser" />
    </LinearLayout>
</RelativeLayout>