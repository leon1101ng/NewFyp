<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/shadow"
    tools:context=".UserAccount.Register">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:fontFamily="serif"
        android:text="Sign Up"
        android:textColor="#ffffff"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="114dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/RegEmail"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputid"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColorHint="#D7467D" />

        <EditText
            android:id="@+id/RegPass"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputid"
            android:drawableLeft="@drawable/ic_locked_padlock"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColorHint="#D7467D" />

        <EditText
            android:id="@+id/RegCPass"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/RegPass"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputid"
            android:drawableLeft="@drawable/ic_locked_padlock"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Comfirm Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColorHint="#D7467D" />

        <Button
            android:id="@+id/Regbtn"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/registerbutton"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Create Account"
            android:textColor="#000000" />
    </LinearLayout>


</RelativeLayout>