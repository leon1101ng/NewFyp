<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAccount.UserSetup">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/CreateEventTitle"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:text="User Setup" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/BackToMenu"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back1" />



        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Userprofile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/userprofile" />

    <EditText
        android:id="@+id/Setupusername"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_centerInParent="true"
        android:background="@drawable/inputid"
        android:drawableLeft="@drawable/ic_assignment_black_24dp"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Username"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="#D7467D" />

    <EditText
        android:id="@+id/Setupname"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="234dp"
        android:background="@drawable/inputid"
        android:drawableLeft="@drawable/ic_name"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Name"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="#D7467D" />

    <EditText
        android:id="@+id/Setupcountry"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="165dp"
        android:background="@drawable/inputid"
        android:drawableLeft="@drawable/ic_country"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Country"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="#D7467D" />

    <Button
        android:id="@+id/Setupsubmit"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Setupcountry"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:background="@drawable/registerbutton"
        android:text="Submit"
        android:textColor="#000000"/>
</RelativeLayout>