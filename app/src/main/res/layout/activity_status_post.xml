<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInterface.StatusPost">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_gravity="center" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ImagePOSTHome"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home_black_24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/PostStatus"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_done" />

    </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/Status_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appBarLayout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/StatusTagView"
        android:layout_below="@+id/Status_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/StatusLocationView"
        android:layout_below="@+id/StatusTagView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text=" "
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/Status_location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/Status_Tag"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bordertopbtm"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_right_arrow1"
        android:fontFamily="casual"
        android:onClick="PlacePicker"
        android:text="Location"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Status_Tag"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bordertopbtm"
        android:drawableLeft="@drawable/ic_tagppl"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_right_arrow1"
        android:fontFamily="casual"
        android:text="Mention"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="25dp" />


</RelativeLayout>